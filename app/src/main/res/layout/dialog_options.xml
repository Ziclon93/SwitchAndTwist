<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LayoutdialogSettings"
    android:layout_width="250dp"
    android:layout_height="400dp"
    android:adjustViewBounds="true"
    android:background="@drawable/fondo_options"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="308dp"
        android:layout_height="647dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.38"
        app:layout_constraintHorizontal_bias="0.65">

        <Button
            android:id="@+id/Credits"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/ExitD"
            android:layout_alignStart="@+id/ExitD"
            android:layout_below="@+id/Reiniciar"
            android:layout_marginTop="16dp"
            android:background="@drawable/boto_credits" />

        <Button
            android:id="@+id/Reiniciar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="27dp"
            android:background="@drawable/boto_replay"
            android:layout_below="@+id/FX_Sound"
            android:layout_alignRight="@+id/song_Sound"
            android:layout_alignEnd="@+id/song_Sound" />

        <ToggleButton
            android:id="@+id/FX_Sound"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_alignBaseline="@+id/song_Sound"
            android:layout_alignBottom="@+id/song_Sound"
            android:layout_alignLeft="@+id/Reiniciar"
            android:layout_alignStart="@+id/Reiniciar"
            android:background="@drawable/toggle_selector_fx"
            android:textOff=""
            android:textOn="" />

        <Button
            android:id="@+id/ExitD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/song_Sound"
            android:layout_alignRight="@+id/song_Sound"
            android:layout_below="@+id/Credits"
            android:layout_marginEnd="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/boto_exit" />

        <ToggleButton
            android:id="@+id/song_Sound"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="49dp"
            android:layout_marginRight="49dp"
            android:layout_marginTop="145dp"
            android:background="@drawable/toggle_selector_audio"
            android:textOff=""
            android:textOn="" />
    </RelativeLayout>


</android.support.constraint.ConstraintLayout>